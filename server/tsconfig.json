{
  "compilerOptions": {
    "target": "ES2020",              
    "module": "CommonJS",            
    "rootDir": "src",                
    "outDir": "dist",                
    "strict": true,                  
    "esModuleInterop": true,         
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}
